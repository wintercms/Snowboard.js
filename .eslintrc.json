{
    "env": {
        "es6": true,
        "browser": true
    },
    "globals": {
        "Snowboard": "writable"
    },
    "extends": [
        "airbnb-base"
    ],
    "rules": {
        "class-methods-use-this": ["off"],
        "indent": ["error", 4, {
            "SwitchCase": 1
        }],
        "new-cap": ["error", { "properties": false }],
        "no-alert": ["off"],
        "no-plusplus": "off",
        "no-param-reassign": ["error", {
            "props": false
        }]
    },
    "ignorePatterns": [
        "rollup.*.config.mjs",
        "jest.config.js",
        "tests/*.js",
        "modules/*/tests/*.js",
        "dist/",
        "packages/*/dist/"
    ],
    "overrides": [
        {
            "files": ["tests/**", "packages/*/tests/**"],
            "plugins": ["jest"],
            "extends": ["plugin:jest/recommended"]
        }
    ]
}
